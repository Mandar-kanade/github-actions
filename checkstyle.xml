<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>
    <property name="fileExtensions" value="java"/>
    
    <!-- Suppression file for excluding specific checks from certain files -->
    <module name="SuppressionFilter">
        <property name="file" value="${config_loc}/checkstyle-suppressions.xml"/>
        <property name="optional" value="false"/>
    </module>

    <!-- Checks for whitespace -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <module name="TreeWalker">
        <!-- Suppress checks for JPA entities, repositories, services, and controllers -->
        <module name="SuppressionCommentFilter">
            <property name="offCommentFormat" value="CHECKSTYLE:OFF"/>
            <property name="onCommentFormat" value="CHECKSTYLE:ON"/>
        </module>
        
        <!-- Checks for Naming Conventions -->
        
        <!-- Member variables must start with mstr, mi, mb, or l prefix -->
        <module name="MemberName">
            <property name="format" value="^(mstr[A-Z][a-zA-Z0-9]*|mi[A-Z][a-zA-Z0-9]*|mb[A-Z][a-zA-Z0-9]*|lstr[A-Z][a-zA-Z0-9]*|li[A-Z][a-zA-Z0-9]*|lb[A-Z][a-zA-Z0-9]*)$"/>
            <message key="name.invalidPattern"
                     value="Member variable ''{0}'' must start with mstr, mi, mb, lstr, li, or lb followed by uppercase letter."/>
            <!-- Suppress for JPA entities (annotated with @Entity) and Spring components -->
            <property name="id" value="memberNameCheck"/>
        </module>
        
        <module name="SuppressWithNearbyCommentFilter">
            <property name="commentFormat" value="CHECKSTYLE IGNORE MemberName"/>
            <property name="checkFormat" value="MemberName"/>
            <property name="influenceFormat" value="0"/>
        </module>

        <!-- Parameter names must start with p -->
        <module name="ParameterName">
            <property name="format" value="^p[A-Z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern"
                     value="Parameter ''{0}'' must start with ''p'' followed by uppercase letter."/>
        </module>

        <!-- Local variables can follow standard naming -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Method names -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Type names (classes, interfaces) -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Package names -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
        </module>

        <!-- Checks for imports -->
        <module name="AvoidStarImport"/>
        <module name="RedundantImport"/>
        <module name="UnusedImports"/>

        <!-- Checks for Size Violations -->
        <module name="MethodLength">
            <property name="max" value="150"/>
        </module>
        <module name="ParameterNumber">
            <property name="max" value="7"/>
        </module>

        <!-- Checks for whitespace -->
        <module name="EmptyForIteratorPad"/>
        <module name="GenericWhitespace"/>
        <module name="MethodParamPad"/>
        <module name="NoWhitespaceAfter"/>
        <module name="NoWhitespaceBefore"/>
        <module name="OperatorWrap"/>
        <module name="ParenPad"/>
        <module name="TypecastParenPad"/>
        <module name="WhitespaceAfter"/>
        <module name="WhitespaceAround"/>

        <!-- Modifier Checks -->
        <module name="ModifierOrder"/>
        <module name="RedundantModifier"/>

        <!-- Checks for blocks -->
        <module name="AvoidNestedBlocks"/>
        <module name="EmptyBlock"/>
        <module name="LeftCurly"/>
        <module name="NeedBraces"/>
        <module name="RightCurly"/>

        <!-- Checks for common coding problems -->
        <module name="EmptyStatement"/>
        <module name="EqualsHashCode"/>
        <module name="IllegalInstantiation"/>
        <module name="InnerAssignment"/>
        <module name="SimplifyBooleanExpression"/>
        <module name="SimplifyBooleanReturn"/>

        <!-- Checks for class design -->
        <module name="FinalClass"/>
        <module name="HideUtilityClassConstructor">
            <!-- Suppress for Spring Boot application classes -->
            <property name="id" value="hideUtilityClassConstructor"/>
        </module>
        <module name="InterfaceIsType"/>

        <!-- Miscellaneous other checks -->
        <module name="ArrayTypeStyle"/>
        <module name="UpperEll"/>
    </module>
</module>

