{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":semanticCommits",
      ":dependencyDashboard",
      ":automergeMinor",
      ":maintainLockFilesWeekly",
      "security:patch"
    ],
  
    "enabledManagers": ["maven", "gradle", "github-actions"],
  
    "packageRules": [
      {
        "matchManagers": ["maven", "gradle"],
        "matchUpdateTypes": ["patch"],
        "automerge": true,
        "description": "Automerge safe patch updates for dependencies"
      },
      {
        "matchManagers": ["maven", "gradle"],
        "matchUpdateTypes": ["minor", "major"],
        "labels": ["dependencies"],
        "automerge": false
      },
      {
        "matchDepTypes": ["plugin"],
        "groupName": "Build plugins",
        "labels": ["build", "dependencies"]
      },
      {
        "matchManagers": ["maven", "gradle"],
        "matchConfidenceLevels": ["high"],
        "labels": ["security", "vulnerability"],
        "description": "Prioritize known vulnerable packages"
      }
    ],
  
    "vulnerabilityAlerts": {
      "enabled": true,
      "labels": ["security", "vulnerability", "priority:high"],
      "automerge": true
    },
  
    "dependencyDashboard": true,
    "rebaseWhen": "behind-base-branch",
    "labels": ["dependencies", "renovate"],
    "timezone": "UTC",
    "schedule": ["after 6pm every weekday", "before 6am every weekday"]
  }
  